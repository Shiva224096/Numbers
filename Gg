# Install the library
pip install PyMuPDF

import fitz  # PyMuPDF

def convert_msg_to_pdf(msg_file_path, pdf_file_path):
    doc = fitz.open()  # Create a new PDF document
    msg = extract_msg.Message(msg_file_path)
    subject = msg.subject
    body = msg.body

    # Add a new page to the PDF
    page = doc.new_page(width=600, height=800)
    page.insert_text((100, 750), subject, fontsize=12)
    page.insert_text((40, 720), body, fontsize=10)

    # Save the PDF
    doc.save(pdf_file_path)
    doc.close()

# Example usage
convert_msg_to_pdf('path/to/your/file.msg', 'output.pdf')
